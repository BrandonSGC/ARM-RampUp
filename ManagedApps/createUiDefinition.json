{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
  "handler": "Microsoft.Azure.CreateUIDef",
  "version": "0.1.2-preview",
  "parameters": {
    "config": {
      "isWizard": false,
      "basics": {
        "description": "### Service Catalogue managed application for Dev Team Ramp Up.\nMake sure to follow provided instructions for deployment.",
        "subscription": {
          "constraints": {
            "validations": [
              {
                "isValid": "[not(equals(subscription().tenantId,'16b3c013-d300-468d-ac64-7eda0820b6d3'))]",
                "message": "Use external subscription"
              }
            ]
          },
          "resourceProviders": [
            "Microsoft.EventHub"
          ]
        }
      }
    },
    "basics": [
      {
        "name": "prefix",
        "type": "Microsoft.Common.TextBox",
        "label": "App and resource Identifier",
        "placeholder": "Prefix here",
        "toolTip": "Will be used as a prefix for the app and it's resources.",
        "constraints": {
          "required": true,
          "regex": "^[a-zA-Z][a-zA-Z0-9-]{6,35}[a-zA-Z0-9]$",
          "validationMessage": "Only alphanumeric characters are allowed, and the value must be 6-35 characters long."
        },
        "visible": true
      }
    ],
    "steps": [
      {
        "name": "triggerselector",
        "label": "Failure",
        "elements": [
          {
            "name": "locationApiCheck",
            "type": "Microsoft.Solutions.ArmApiControl",
            "request": {
              "method": "GET",
              "path": "[concat(subscription().id, '/providers/Microsoft.EventHub/sku?api-version=2023-01-01-preview')]"
            }
          },
          {
            "name": "failureLabel",
            "type": "Microsoft.Common.TextBlock",
            "visible": true,
            "options": {
              "text": "Configure if a failure should be triggered on the managed app."
            }
          },
          {
            "name": "triggerfail",
            "type": "Microsoft.Common.OptionsGroup",
            "label": "Trigger",
            "defaultValue": "True",
            "constraints": {
              "allowedValues": [
                {
                  "label": "True",
                  "value": true
                },
                {
                  "label": "False",
                  "value": false
                }
              ],
              "required": true
            },
            "visible": true
          },
          {
            "name": "LocationInfo",
            "type": "Microsoft.Common.TextBlock",
            "visible": "[equals(steps('triggerselector').triggerfail, false)]",
            "options": {
              "text": "Select from the allowed locations for the eventhub deployment."
            }
          },
          {
            "name": "NewlocationDropDown",
            "type": "Microsoft.Common.DropDown",
            "label": "Location",
            "toolTip": "The location to deploy eventhub.",
            "constraints": {
              "allowedValues": "[map(filter(filter(steps('triggerselector').locationApiCheck.value, (item) => equals(item.properties.features.supportsZoneRedundancy, true)), (item) => equals(item.properties.skuName, 'Basic')), (item) => parse(concat('{\"label\":\"', item.name, '\",\"value\":\"', item.name, '\"}')))]",
              "required": true
            },
            "visible": "[equals(steps('triggerselector').triggerfail, false)]"
          }
        ]
      }
    ],
    "outputs": {
      "trigger": "[steps('triggerselector').triggerfail]",
      "prefix": "[basics('prefix')]",
      "newLocation": "[steps('triggerselector').NewlocationDropDown]",
      "applicationResourceName": "[concat(basics('prefix'),'-app')]"
    },
    "resourceTypes": [
      "Microsoft.EventHub/namespaces"
    ]
  }
}